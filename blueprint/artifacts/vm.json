{
    "properties": {
        "template": {
            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "parameters": {
                "vmSize": {
                    "type": "string"
                },
                "adminUsername": {
                    "type": "string"
                },
                "adminPassword": {
                    "type": "string"
                },
                "ubuntuOSVersion": {
                    "type": "string"
                },
                "localNetworkPrefix": {
                    "type": "string"
                },
                "localGAtewayIpAddress": {
                    "type": "string"
                },
                "SharedKeyConnection": {
                    "type": "string"
                },
                "vnetAddressPrefix": {
                    "type": "string"
                },
                "defaultSubnetPrefix": {
                    "type": "string"
                },
                "cloudSubnetPrefix": {
                    "type": "string"
                }
            },
            "variables": {
                "deployment-prefix": "blueprint-prefix",
                "gatewaySubnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'blueprint-vnet', 'GatewaySubnet')]"
            },
            "resources": [
                {
                    "apiVersion": "2018-07-01",
                    "type": "Microsoft.Network/localNetworkGateways",
                    "name": "localGateway",
                    "location": "eastus",
                    "properties": {
                        "localNetworkAddressSpace": {
                            "addressPrefixes": [
                                "[parameters('localNetworkPrefix')]"
                            ]
                        },
                        "gatewayIpAddress": "[parameters('localGAtewayIpAddress')]"
                    }
                },
                {
                    "apiVersion": "2018-07-01",
                    "name": "vpnConnection",
                    "type": "Microsoft.Network/connections",
                    "location": "eastus",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/virtualNetworkGateways', 'cloudGateway')]",
                        "[resourceId('Microsoft.Network/localNetworkGateways', 'localGateway')]"
                    ],
                    "properties": {
                        "virtualNetworkGateway1": {
                            "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', 'cloudGateway')]"
                        },
                        "localNetworkGateway2": {
                            "id": "[resourceId('Microsoft.Network/localNetworkGateways', 'localGateway')]"
                        },
                        "connectionType": "IPsec",
                        "routingWeight": 10,
                        "sharedKey": "[parameters('SharedKeyConnection')]"
                    }
                },
                {
                    "type": "Microsoft.Network/publicIPAddresses",
                    "apiVersion": "2018-11-01",
                    "name": "[concat('blueprint-pip', copyIndex())]",
                    "copy": {
                        "name": "piploop",
                        "count": 3
                    },
                    "location": "eastus",
                    "properties": {
                        "publicIPAllocationMethod": "Dynamic",
                        "dnsSettings": {
                            "domainNameLabel": "[concat('blueprint-dns', copyIndex())]"
                        }
                    }
                },
                {
                    "apiVersion": "2018-07-01",
                    "type": "Microsoft.Network/publicIPAddresses",
                    "name": "gateway-pip",
                    "location": "eastus",
                    "properties": {
                        "publicIPAllocationMethod": "Dynamic"
                    }
                },
                {
                    "apiVersion": "2018-07-01",
                    "type": "Microsoft.Network/virtualNetworkGateways",
                    "name": "cloudGateway",
                    "location": "eastus",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/publicIPAddresses', 'gateway-pip')]",
                        "[resourceId('Microsoft.Network/virtualNetworks', 'blueprint-vnet')]"
                    ],
                    "properties": {
                        "ipConfigurations": [
                            {
                                "properties": {
                                    "privateIPAllocationMethod": "Dynamic",
                                    "subnet": {
                                        "id": "[variables('gatewaySubnetRef')]"
                                    },
                                    "publicIPAddress": {
                                        "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'gateway-pip')]"
                                    }
                                },
                                "name": "vnetGatewayConfig"
                            }
                        ],
                        "sku": {
                            "name": "Basic",
                            "tier": "Basic"
                        },
                        "gatewayType": "Vpn",
                        "vpnType": "RouteBased",
                        "enableBgp": "false"
                    }
                },
                {
                    "type": "Microsoft.Network/networkSecurityGroups",
                    "apiVersion": "2019-08-01",
                    "name": "blueprint-nsg",
                    "location": "eastus",
                    "properties": {
                        "securityRules": [
                            {
                                "name": "default-allow-22",
                                "properties": {
                                    "priority": 1000,
                                    "access": "Allow",
                                    "direction": "Inbound",
                                    "destinationPortRange": "22",
                                    "protocol": "TCP",
                                    "sourceAddressPrefix": "*",
                                    "sourcePortRange": "*",
                                    "destinationAddressPrefix": "*"
                                }
                            }
                        ]
                    }
                },
                {
                    "type": "Microsoft.Network/virtualNetworks",
                    "apiVersion": "2018-11-01",
                    "name": "blueprint-vnet",
                    "location": "eastus",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/networkSecurityGroups', 'blueprint-nsg')]"
                    ],
                    "properties": {
                        "addressSpace": {
                            "addressPrefixes": [
                                "[parameters('vnetAddressPrefix')]"
                            ]
                        },
                        "subnets": [
                            {
                                "name": "Subnet",
                                "properties": {
                                    "addressPrefix":"[parameters('defaultSubnetPrefix')]",
                                    "networkSecurityGroup": {
                                        "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'blueprint-nsg')]"
                                    }
                                }
                            },
                            {
                                "name": "GatewaySubnet",
                                "properties": {
                                    "addressPrefix": "[parameters('cloudSubnetPrefix')]"
                                }
                            }
                        ]
                    }
                },
                {
                    "type": "Microsoft.Network/networkInterfaces",
                    "apiVersion": "2018-11-01",
                    "name": "[concat('blueprint-nic', copyIndex())]",
                    "location": "eastus",
                    "copy": {
                        "name": "nicloop",
                        "count": 3
                    },
                    "dependsOn": [
                        "piploop",
                        "[resourceId('Microsoft.Network/virtualNetworks/', 'blueprint-vnet')]"
                    ],
                    "properties": {
                        "ipConfigurations": [
                            {
                                "name": "[concat('ipconfig', copyIndex())]",
                                "properties": {
                                    "privateIPAllocationMethod": "Dynamic",
                                    "publicIPAddress": {
                                        "id": "[resourceId('Microsoft.Network/publicIPAddresses',concat('blueprint-pip', copyIndex()))]"
                                    },
                                    "subnet": {
                                        "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'blueprint-vnet', 'Subnet')]"
                                    }
                                }
                            }
                        ]
                    }
                },
                {
                    "type": "Microsoft.Compute/virtualMachines",
                    "apiVersion": "2018-10-01",
                    "name": "[concat('blueprint-vm', copyIndex())]",
                    "location": "eastus",
                    "copy": {
                        "name": "vmloop",
                        "count": 3
                    },
                    "dependsOn": [
                        "nicloop"
                    ],
                    "properties": {
                        "hardwareProfile": {
                            "vmSize": "[parameters('vmSize')]"
                        },
                        "osProfile": {
                            "computerName": "[concat('blueprint-vm', copyIndex())]",
                            "adminUsername": "[parameters('adminUsername')]",
                            "adminPassword": "[parameters('adminPassword')]",
                            "linuxConfiguration": "[json('null')]"
                        },
                        "storageProfile": {
                            "imageReference": {
                                "publisher": "Canonical",
                                "offer": "UbuntuServer",
                                "sku": "[parameters('ubuntuOSVersion')]",
                                "version": "latest"
                            },
                            "osDisk": {
                                "createOption": "FromImage"
                            },
                            "dataDisks": [
                                {
                                    "diskSizeGB": 1023,
                                    "lun": 0,
                                    "createOption": "Empty"
                                }
                            ]
                        },
                        "networkProfile": {
                            "networkInterfaces": [
                                {
                                    "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('blueprint-nic', copyIndex()))]"
                                }
                            ]
                        }
                    }
                }
            ],
            "outputs": {}
        },
        "parameters": {
            "vmSize": {
                "value": "[parameters('vmSizeGen')]"
            },
            "adminUsername": {
                "value": "[parameters('adminUsernameGen')]"
            },
            "adminPassword": {
                "value": "[parameters('adminPasswordGen')]"
            },
            "ubuntuOSVersion": {
                "value": "[parameters('ubuntuOSVersionGen')]"
            },
            "localNetworkPrefix": {
                "value" : "[parameters('localNetworkPrefixGen')]"
            },
            "localGAtewayIpAddress": {
                "value" : "[parameters('localGAtewayIpAddressGen')]"
            },
            "SharedKeyConnection": {
                "value" : "[parameters('SharedKeyConnectionGen')]"
            },
            "vnetAddressPrefix": {
                "value" : "[parameters('vnetAddressPrefixGen')]"
            },
            "defaultSubnetPrefix": {
                "value" : "[parameters('defaultSubnetPrefixGen')]"
            },
            "cloudSubnetPrefix": {
                "value" : "[parameters('cloudSubnetPrefixGen')]"
            }
        },
        "dependsOn": [],
        "resourceGroup": "final-blueprint-rg",
        "displayName": "virtual-machine-template",
        "description": "this is my first attempt to create a blueprint via command line"
    },
    "kind": "template",
    "id": "/providers/Microsoft.Blueprint/blueprints/final-blueprint-gulucasd/artifacts/virtualmachine",
    "type": "Microsoft.Blueprint/blueprints/artifacts",
    "name": "virtualmachine"
}